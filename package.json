{
  "name": "metrics-service",
  "version": "1.0.0",
  "description": "Microservice de métriques et monitoring pour architecture de microservices de réservation et billetterie",
  "main": "src/app.js",  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testNamePattern='Integration'",
    "test:unit": "jest --testNamePattern='Unit'",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "docker:build": "docker build -t metrics-service .",
    "docker:run": "docker run -p 3000:3000 metrics-service",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "prometheus": "docker-compose up prometheus grafana",
    "init-db": "node scripts/init-db.js",
    "clean-db": "node scripts/clean-db.js"
  },
  "keywords": [
    "metrics",
    "monitoring",
    "prometheus",
    "grafana",
    "microservices",
    "telemetry"
  ],
  "author": "YasserSeryas",
  "license": "MIT",  "dependencies": {
